{
  "name": "@textpress/bump-version",
  "version": "0.0.2",
  "description": "Bumps version in package.json",
  "main": "lib/index.js",
  "repository": "github:textpress/jwt-token",
  "scripts": {
    "bump": "gulp bump --version",
    "build": "yarn run build:clean && yarn run build:lib",
    "build:clean": "rimraf lib",
    "build:lib": "babel -d lib src --ignore '**/__tests__/**'",
    "build:flow": "flow-copy-source -v -i '**/__tests__/**' src lib",
    "ci-build": "yarn run build"
  },
  "dependencies": {
    "gulp": ">=3.9.1",
    "gulp-confirm": ">=1.0.6",
    "gulp-exec": ">=2.1.3",
    "gulp-util": ">=3.0.8"
  },
  "devDependencies": {
    "@textpress/babel-preset-textpress": ">=0.0.1",
    "@textpress/bump-version": ">=0.0.1",
    "rimraf": "^2.6.1",
    "yargs": "^8.0.2"
  }
}
